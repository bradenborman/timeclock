{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x gradlew && ./gradlew clean build -x test --no-daemon"
  },
  "deploy": {
    "startCommand": "java -Duser.timezone=America/Chicago -Dserver.port=$PORT -jar tc-server/build/libs/timeclock.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
